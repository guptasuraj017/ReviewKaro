<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">


    <title>@ViewBag.Title</title>
    <!-- Bootstrap -->
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/toastr.css" rel="stylesheet" />
    @RenderSection("css", false)

    <script src="~/Script/jquery-3.4.1.js"></script>
    <script src="~/Script/jquery-ui.js"></script>
    <script src="~/Script/jquery.validate.min.js"></script>
    <script src="~/Script/jquery.validate.unobtrusive.min.js"></script>











    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/
    html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/
    respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div class="header">
        <a href="#default" class="logo">

            <img src="~/Content/Images/reviewbuddy.png" width="30" height="30" alt="">
            Review Buddy
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @if (IsSectionDefined("Menu"))
        {
            @RenderSection("Menu", false)
        }
        @Html.ActionLink("About", "About", "Home")
        <div class="header-right">
            @if (User.Identity.IsAuthenticated)
            {
                if (IsSectionDefined("Name"))
                {
                    @RenderSection("Name", false)
                }

                @*<a href="#default">
                    @User.Identity.Name
                    </a>*@
                <diV style="display:inline">@Html.ActionLink("Logout", "LogOut", "Account")</diV>


            }
            else
            {

                @Html.ActionLink("Login", "LogIn", "Account", new { @class = "active" })

            }

        </div>
    </div>




    @*<div class="pageTitle"><h4>@ViewBag.Title</h4></div>*@
    @RenderBody()




    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Script/bootstrap.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    @RenderSection("script", false)
</body>
</html>
